#include<stdio.h>
int n,a[10],i,key,flag=0,lb,ub,mid,p,c;

int binary(int a[10],int key,int n){
    lb=0;
    ub=n-1;
    while(lb<=ub){
         mid=(lb+ub)/2;
        if(a[mid]==key){
            return mid;
       }
        else if(key>a[mid]){
            lb=mid+1;
        }
        else if(key<a[mid]){
            ub=mid-1;
        }}
    return 0;
}

void sort(int a[10],int n){
  for(p=1;p<n;p++){
      for(c=0;c<n-p;c++){
          if(a[c]>a[c+1]){
              int t=a[c];
              a[c]=a[c+1];
              a[c+1]=t;
          }}}}
          
 void main(){
     int n,a[10],i,key,lb,ub,mid;
     printf("Enter the number of elements in array");
    scanf("%d",&n);
    printf("Enter the elements in the array");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
sort(a,n);
    printf("\nsorted array is:");
    for(i=0;i<n;i++){
         printf("\n %d",a[i]);
    }
    printf("\nEnter the key to be searched");
    scanf("%d",&key);
    int result=binary(a,key,n);
    if(result==0){
        printf("the key is not found");
    }
    else{
        printf("the key is found");
    }
}
